{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "api/*": ["api/*"],
      "__tests__/*": ["__tests__/*"]
    }
  }
}
